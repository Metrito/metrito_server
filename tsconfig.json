{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "paths": {
      "@server/*": ["./src/server/*"],
      "@server": ["./src/server"],

      "@application/*": ["./src/application/*"],
      "@application": ["./src/application"],

      "@factories/*": ["./src/factories/*"],
      "@factories": ["./src/factories"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
