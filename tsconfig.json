{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "paths": {
      "@server/*": ["./src/server/*"],
      "@server": ["./src/server"],
    }
  },
  "exclude": ["node_modules", "dist"]
}
