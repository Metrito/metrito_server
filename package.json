{
  "name": "metrito_server",
  "version": "2.0.0",
  "description": "All your Ad Accounts in one place.",
  "license": "ISC",
  "private": true,
  "authors": [
    {
      "name": "Matheus Advera",
      "email": "matheus@advera.com.br"
    },
    {
      "name": "Felipe Oliveira",
      "email": "luisfelipe@metrito.com"
    },
    {
      "name": "Luca Frederice",
      "email": "luca@metrito.com"
    },
    {
      "name": "Yan David",
      "email": "yan@metrito.com"
    }
  ],
  "engines": {
    "node": "20.6.1",
    "npm": "9.8.1"
  },
  "scripts": {
    "dev": "cross-env NODE_ENV=development tsx watch src/index.ts",
    "build": "rm -rf dist && swc src -d dist --copy-files",
    "start": "cross-env NODE_ENV=production node dist/index.js",
    "shutdown": "fuser -k 4000/tcp && echo 'Terminated' || echo 'Nothing server instance is running on port 4000'",
    "typecheck": "tsc --noEmit",
    "lint": "eslint --ext .ts,.tsx src",
    "lint:fix": "eslint --ext .ts,.tsx src --fix",
    "preinstall": "npx only-allow npm",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --ext .ts,.tsx --fix",
      "tsc --noEmit"
    ]
  },
  "dependencies": {
    "@swc/cli": "^0.1.65",
    "@swc/core": "^1.3.105",
    "cross-env": "^7.0.3",
    "dotenv": "^16.3.2",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@felipstein/eslint-config-node": "^1.1.2",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "eslint": "^8.56.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "tsx": "^4.7.0"
  }
}
